# Copy this file to secrets.toml and fill in your values.

# Developer access: only someone who knows this key can upload, refresh, or edit tracker source.
# Unlock via sidebar > Developer access. Developers can also manage the allowed-users list.
DEVELOPER_KEY = "your-secret-key"

# Optional: limit app access to specific users (allowlist). Set to true to enable.
# When enabled, only users in the allowlist (or developers with the key above) can use the app.
# Add/remove users under Developer access > Allowed users.
# ALLOWLIST_ENABLED = false

# AI (optional). Uncomment and set your key so "Ask AI" works (uses GPT-4o-mini).
# Get a key at https://platform.openai.com/api-keys
# OPENAI_API_KEY = "sk-your-key-here"

# Trino (optional). Get the host from your Superset/Beam Trino connection.
TRINO_HOST = "your-trino-host.com"
TRINO_PORT = 443
TRINO_CATALOG = "google_spreadsheets"
TRINO_USER = "trino"
