# Copy this file to secrets.toml and fill in your values.

# Developer access: only someone who knows this key can upload, refresh, or edit tracker source.
# Unlock via sidebar > Developer access. Developers can also manage the allowed-users list.
DEVELOPER_KEY = "your-secret-key"

# Optional: limit app access to specific users (allowlist). Set to true to enable.
# When enabled, only users in the allowlist (or developers with the key above) can use the app.
# Add/remove users under Developer access > Allowed users.
# ALLOWLIST_ENABLED = false

# Optional: super users see all Data tabs (Price Multipliers, Area Data, Execution Log, etc.).
# Regular users see only kitchen-related tabs (SF Kitchen Data, Churn, Facility details, Sellable/No Status).
# Comma-separated emails/names. Developers are always super users.
# SUPER_USER_IDS = "admin@company.com, analyst@company.com"

# Auto-refresh: on by default. SF data refreshes every 15 mins when the app is open (no manual intervention).
# Set AUTO_REFRESH_ENABLED = false to disable.
# AUTO_REFRESH_MINUTES = 15

# Optional: load tracker data from GitHub instead of manual upload.
# Use the raw file URL (e.g. https://raw.githubusercontent.com/username/repo/main/data/output/ksa_kitchen_tracker.csv).
# Then in the app use "Load from GitHub" under Data to pull the latest file.
# GITHUB_TRACKER_CSV_URL = "https://raw.githubusercontent.com/maisam21-lab/ksa-kitchenP-tracker/main/data/output/ksa_kitchen_tracker.csv"

# AI (optional). Uncomment and set your key so "Ask AI" works (uses GPT-4o-mini).
# Get a key at https://platform.openai.com/api-keys
# OPENAI_API_KEY = "sk-your-key-here"

# Salesforce: sf_tab_queries maps tab name â†’ SOQL or Report ID. See docs/SOQL_KITCHENS_ALL_COUNTRIES.md
# [sf_tab_queries]
# "SF Kitchen Data" = "SELECT Id, Name, Type__c, Status__c, Account__r.Name, Account__r.Country__c FROM Kitchen_Number__c WHERE Account__r.Country__c IN ('Saudi Arabia','UAE','Kuwait','Bahrain','Qatar')"
# Or use Report ID: "SF Kitchen Data" = "00O6T000006Y0l6UAC"

# Trino (optional). Get the host from your Superset/Beam Trino connection.
TRINO_HOST = "your-trino-host.com"
TRINO_PORT = 443
TRINO_CATALOG = "google_spreadsheets"
TRINO_USER = "trino"
